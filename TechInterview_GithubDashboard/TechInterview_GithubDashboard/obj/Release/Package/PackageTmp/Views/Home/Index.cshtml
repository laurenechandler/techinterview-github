@model IEnumerable<TechInterview_GithubDashboard.Models.EventModel>
@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <div style="padding: 5px 0px;">
        Your Public Events Feed
        <button onclick="location.href='@Url.Action("Index", "Home")'" style="float: right; background-color: Transparent; border: none;"><img src="https://cdn4.iconfinder.com/data/icons/ionicons/512/icon-refresh-128.png" style="height: 30px;" /></button>
    </div>
        <div style="background-color: white; font-size: 16px; border:1px solid black; border-radius: 5px; ">
        @foreach (var item in Model)
        {
            <div style="border-bottom:1px solid gray; padding: 9px 10px;">
                <img src="@item.Actor.AvatarURL" style="height: 48px;" />
                <span style="font-weight:bold; margin-left: 10px; font-size: 18px;">@item.Actor.DisplayLogin</span> <br />
                <span style="margin-left: 58px;">Event Type: @item.EventType</span> <br />
                <span style="margin-left: 58px;">Repository: @item.Repo.Name</span> <br />
                <a style="margin-left: 58px; cursor:pointer" class="showDetails">[+] Show event details</a>
                <a style="margin-left: 58px; cursor:pointer" class="hide hideDetails">[-] Hide event details</a>
                <div style="margin-left: 58px; font-size: 14px;" class="hide details">
                    Created At: @item.Created <br />
                    Event ID: @item.ID <br />
                    Public: @item.Public <br />

                </div>
            </div>
        }
    </div>
</div>

@section Scripts 
{
    <script type="text/javascript">
        $(document).ready(function () {
            $('.showDetails').click(function () {
                $(this).addClass('hide');
                $(this).siblings('.hideDetails').removeClass('hide');
                $(this).siblings('.details').removeClass('hide');
            });
            $('.hideDetails').click(function () {
                $(this).addClass('hide');
                $(this).siblings('.details').addClass('hide');
                $(this).siblings('.showDetails').removeClass('hide');
            });
        });
    </script>    
}